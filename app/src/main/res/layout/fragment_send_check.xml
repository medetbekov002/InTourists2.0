<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    xmlns:app="http://schemas.android.com/apk/res-auto"    tools:context=".ui.screen.payment.other_way.bottomsheetdialog.SendCheckFragment"    android:background="@color/white">    <com.google.android.material.button.MaterialButton        android:id="@+id/btn_whatsApp"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginHorizontal="16dp"        android:backgroundTint="@color/white"        android:text="@string/whatsapp"        android:textColor="@color/black"        android:textSize="24sp"        app:icon="@drawable/ic_whatsapp"        app:iconSize="30dp"        app:iconTint="@color/black"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <com.google.android.material.button.MaterialButton        android:id="@+id/btn_telegram"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginHorizontal="16dp"        android:backgroundTint="@color/white"        android:text="Перейти на Telegram"        android:textColor="@color/black"        android:textSize="24sp"        app:iconSize="30dp"        app:iconTint="@color/black"        app:layout_constraintTop_toBottomOf="@+id/btn_whatsApp" />    <ImageView        android:layout_width="30dp"        android:layout_height="30dp"        android:src="@drawable/ic_telegram"        app:layout_constraintBottom_toBottomOf="@+id/btn_telegram"        app:layout_constraintStart_toStartOf="@+id/btn_telegram"        app:layout_constraintTop_toBottomOf="@+id/btn_whatsApp"        android:layout_marginStart="30dp"/></androidx.constraintlayout.widget.ConstraintLayout>