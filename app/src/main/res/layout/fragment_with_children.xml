<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/white"    tools:context=".presentation.ui.screen.payment.without_children.WithoutChildrenFragment">    <ScrollView        android:layout_width="match_parent"        android:layout_height="match_parent"        app:layout_constraintBottom_toTopOf="@id/button_continue"        app:layout_constraintTop_toTopOf="parent">        <androidx.constraintlayout.widget.ConstraintLayout            android:layout_width="match_parent"            android:layout_height="wrap_content">            <androidx.appcompat.widget.Toolbar                android:id="@+id/toolbar"                android:layout_width="match_parent"                android:layout_height="wrap_content"                app:layout_constraintTop_toTopOf="parent">                <androidx.appcompat.widget.AppCompatButton                    android:id="@+id/button_back"                    android:layout_width="16dp"                    android:layout_height="26dp"                    android:background="@drawable/ic_arrow_left"                    app:cornerRadius="360dp"                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"                    tools:layout_editor_absoluteX="16dp"                    tools:layout_editor_absoluteY="19dp" />                <com.google.android.material.textview.MaterialTextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginStart="40dp"                    android:text="@string/payment"                    android:textColor="@color/black"                    android:textSize="24sp"                    android:textStyle="bold" />            </androidx.appcompat.widget.Toolbar>            <LinearLayout                android:id="@+id/icon_layout"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginHorizontal="24dp"                android:orientation="horizontal"                android:weightSum="3"                app:layout_constraintTop_toBottomOf="@id/toolbar">                <ImageView                    android:id="@+id/img_confirm"                    android:layout_width="wrap_content"                    android:layout_height="60dp"                    android:layout_weight="1"                    android:contentDescription="@string/todo"                    android:src="@drawable/bg_confirm" />                <ImageView                    android:id="@+id/img_card"                    android:layout_width="60dp"                    android:layout_height="60dp"                    android:layout_weight="1"                    android:src="@drawable/ic_card_activate"                    tools:ignore="ContentDescription" />                <ImageView                    android:id="@+id/img_payment"                    android:layout_width="60dp"                    android:layout_height="60dp"                    android:layout_weight="1"                    android:src="@drawable/ic_payment_next"                    tools:ignore="ContentDescription" />            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_marginHorizontal="20dp"                android:layout_marginVertical="22dp"                android:orientation="vertical"                app:layout_constraintTop_toBottomOf="@+id/icon_layout">                <androidx.cardview.widget.CardView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:elevation="2dp"                    app:cardCornerRadius="12dp">                    <androidx.constraintlayout.widget.ConstraintLayout                        android:layout_width="match_parent"                        android:layout_height="match_parent">                        <com.google.android.material.textview.MaterialTextView                            android:id="@+id/txt_main"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_margin="16dp"                            android:textColor="@color/black"                            android:textSize="18sp"                            android:textStyle="bold"                            app:layout_constraintTop_toTopOf="parent"                            tools:text="Чуйская область, Кыргызстан " />                        <com.google.android.material.textview.MaterialTextView                            android:id="@+id/txt_item"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_marginHorizontal="16dp"                            android:layout_marginTop="4dp"                            android:textColor="@color/black"                            android:textSize="22sp"                            android:textStyle="bold"                            app:layout_constraintStart_toStartOf="@+id/txt_main"                            app:layout_constraintTop_toBottomOf="@id/txt_main"                            tools:text="Ущелье Ала-Арча" />                        <LinearLayout                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_marginHorizontal="16dp"                            android:layout_marginBottom="18dp"                            android:orientation="vertical"                            app:layout_constraintBottom_toBottomOf="parent"                            app:layout_constraintTop_toBottomOf="@id/txt_item">                            <LinearLayout                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_marginBottom="10dp"                                android:orientation="horizontal"                                app:layout_constraintBottom_toBottomOf="parent"                                tools:ignore="UseCompoundDrawables">                                <ImageView                                    android:id="@+id/imageView_mini_calendar"                                    android:layout_width="20dp"                                    android:layout_height="20dp"                                    android:src="@drawable/ic_calendar_mini"                                    tools:ignore="ContentDescription" />                                <TextView                                    android:layout_width="wrap_content"                                    android:layout_height="wrap_content"                                    android:layout_marginStart="10dp"                                    tools:text="15 май, 2024" />                            </LinearLayout>                            <LinearLayout                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:orientation="horizontal"                                app:layout_constraintBottom_toBottomOf="parent"                                tools:ignore="UseCompoundDrawables">                                <ImageView                                    android:id="@+id/imageView_mini_clock"                                    android:layout_width="20dp"                                    android:layout_height="20dp"                                    android:src="@drawable/ic_clock_mini"                                    tools:ignore="ContentDescription" />                                <TextView                                    android:layout_width="wrap_content"                                    android:layout_height="wrap_content"                                    android:layout_marginStart="10dp"                                    tools:text="15 май, 2024" />                            </LinearLayout>                        </LinearLayout>                    </androidx.constraintlayout.widget.ConstraintLayout>                </androidx.cardview.widget.CardView>                <androidx.cardview.widget.CardView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginVertical="16dp"                    android:elevation="2dp"                    app:cardCornerRadius="12dp">                    <androidx.constraintlayout.widget.ConstraintLayout                        android:layout_width="match_parent"                        android:layout_height="match_parent">                        <com.google.android.material.textview.MaterialTextView                            android:id="@+id/txt_count"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_margin="16dp"                            android:text="Количество людей"                            android:textColor="@color/black"                            android:textSize="20sp"                            android:textStyle="bold"                            app:layout_constraintTop_toTopOf="parent"                            tools:ignore="HardcodedText" />                        <com.google.android.material.textview.MaterialTextView                            android:id="@+id/txt_Adults"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_marginHorizontal="16dp"                            android:layout_marginTop="16dp"                            android:text="Взрослые"                            android:textColor="@color/black"                            android:textSize="18sp"                            app:layout_constraintTop_toBottomOf="@id/txt_count"                            tools:ignore="HardcodedText" />                        <androidx.appcompat.widget.AppCompatButton                            android:id="@+id/btn_count_adults_plus"                            android:layout_width="25dp"                            android:layout_height="25dp"                            android:background="@drawable/bg_count"                            android:text="@string/plus"                            app:layout_constraintBottom_toBottomOf="@+id/txt_Adults"                            app:layout_constraintEnd_toEndOf="@+id/txt_Adults"                            app:layout_constraintTop_toTopOf="@+id/txt_Adults"                            tools:ignore="TouchTargetSizeCheck,TextSizeCheck,DuplicateSpeakableTextCheck" />                        <com.google.android.material.textview.MaterialTextView                            android:id="@id/txt_result"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:paddingHorizontal="10dp"                            android:text="@string/_1"                            android:textColor="@color/black"                            app:layout_constraintBottom_toBottomOf="@+id/btn_count_adults_plus"                            app:layout_constraintEnd_toStartOf="@+id/btn_count_adults_plus"                            app:layout_constraintTop_toTopOf="@+id/btn_count_adults_plus" />                        <androidx.appcompat.widget.AppCompatButton                            android:id="@+id/btn_count_adults_minus"                            android:layout_width="25dp"                            android:layout_height="25dp"                            android:background="@drawable/bg_minus_gray"                            android:text="@string/minus"                            app:layout_constraintBottom_toBottomOf="@+id/txt_Adults"                            app:layout_constraintEnd_toStartOf="@+id/txt_result"                            app:layout_constraintTop_toTopOf="@+id/txt_Adults"                            tools:ignore="TouchTargetSizeCheck,TextSizeCheck,DuplicateSpeakableTextCheck" />                        <com.google.android.material.textview.MaterialTextView                            android:id="@+id/txt_Baby"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_marginHorizontal="16dp"                            android:layout_marginTop="12dp"                            android:layout_marginBottom="18dp"                            android:text="Дети до 16 лет"                            android:textColor="@color/black"                            android:textSize="18sp"                            app:layout_constraintBottom_toBottomOf="parent"                            app:layout_constraintTop_toBottomOf="@id/txt_Adults"                            tools:ignore="HardcodedText" />                        <androidx.appcompat.widget.AppCompatButton                            android:id="@+id/btn_count_baby_plus"                            android:layout_width="25dp"                            android:layout_height="25dp"                            android:background="@drawable/bg_count"                            android:text="@string/plus"                            app:layout_constraintBottom_toBottomOf="@+id/txt_Baby"                            app:layout_constraintEnd_toEndOf="@+id/txt_Baby"                            app:layout_constraintTop_toTopOf="@+id/txt_Baby"                            tools:ignore="TouchTargetSizeCheck,TextSizeCheck" />                        <TextView                            android:id="@id/txt_result2"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:paddingHorizontal="10dp"                            android:text="@string/_1"                            android:textColor="@color/black"                            app:layout_constraintBottom_toBottomOf="@+id/btn_count_baby_plus"                            app:layout_constraintEnd_toStartOf="@+id/btn_count_baby_plus"                            app:layout_constraintTop_toTopOf="@+id/btn_count_baby_plus" />                        <androidx.appcompat.widget.AppCompatButton                            android:id="@+id/btn_count_baby_minus"                            android:layout_width="25dp"                            android:layout_height="25dp"                            android:background="@drawable/bg_count"                            android:text="@string/minus"                            app:layout_constraintBottom_toBottomOf="@+id/txt_Baby"                            app:layout_constraintEnd_toStartOf="@+id/txt_result"                            app:layout_constraintTop_toTopOf="@+id/txt_Baby"                            tools:ignore="TouchTargetSizeCheck,TextSizeCheck" />                        <View                            android:id="@+id/view_line1"                            android:layout_width="match_parent"                            android:layout_height="1dp"                            android:layout_marginTop="24dp"                            android:background="@color/gray"                            app:layout_constraintTop_toBottomOf="@+id/btn_count_baby_minus" />                    </androidx.constraintlayout.widget.ConstraintLayout>                </androidx.cardview.widget.CardView>                <androidx.cardview.widget.CardView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginVertical="16dp"                    android:elevation="2dp"                    app:cardCornerRadius="12dp">                    <androidx.constraintlayout.widget.ConstraintLayout                        android:layout_width="match_parent"                        android:layout_height="match_parent">                        <com.google.android.material.textfield.TextInputEditText                            android:id="@+id/et_promo"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_margin="16dp"                            android:background="@drawable/bg_card_corner"                            android:hint="@string/app_name"                            android:paddingVertical="18dp"                            android:paddingStart="10dp"                            android:textColor="@color/black"                            android:textColorHint="#404040"                            android:textSize="18sp"                            android:textStyle="bold"                            app:layout_constraintTop_toTopOf="parent"                            tools:ignore="RtlSymmetry,TextContrastCheck,VisualLintTextFieldSize" />                        <com.google.android.material.button.MaterialButton                            android:id="@+id/btn_cancel"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginEnd="8dp"                            android:backgroundTint="@color/red"                            android:insetTop="0dp"                            android:insetBottom="0dp"                            android:text="@string/Cancel"                            app:layout_constraintBottom_toBottomOf="@+id/et_promo"                            app:layout_constraintEnd_toEndOf="@+id/et_promo"                            app:layout_constraintTop_toTopOf="@+id/et_promo"                            tools:ignore="TextContrastCheck,TextContrastCheck" />                        <com.google.android.material.textview.MaterialTextView                            android:id="@+id/txt_all_price"                            style="@style/txt_price"                            android:layout_marginTop="24dp"                            android:text="@string/all_price"                            app:layout_constraintStart_toStartOf="@id/et_promo"                            app:layout_constraintTop_toBottomOf="@id/et_promo" />                        <com.google.android.material.textview.MaterialTextView                            android:id="@+id/txt_discount_price"                            style="@style/txt_price"                            android:layout_marginTop="12dp"                            android:text="@string/discount_price"                            app:layout_constraintStart_toStartOf="@id/txt_all_price"                            app:layout_constraintTop_toBottomOf="@id/txt_all_price" />                        <com.google.android.material.textview.MaterialTextView                            android:id="@+id/txt_promo_price"                            style="@style/txt_price"                            android:layout_marginTop="12dp"                            android:text="@string/promo_price"                            app:layout_constraintStart_toStartOf="@+id/txt_discount_price"                            app:layout_constraintTop_toBottomOf="@+id/txt_discount_price" />                        <com.google.android.material.textview.MaterialTextView                            android:id="@+id/txt_all_price_item"                            style="@style/txt_price"                            android:layout_marginEnd="16dp"                            app:layout_constraintBottom_toBottomOf="@+id/txt_all_price"                            app:layout_constraintEnd_toEndOf="parent"                            app:layout_constraintTop_toTopOf="@+id/txt_all_price"                            tools:text="1900c" />                        <com.google.android.material.textview.MaterialTextView                            android:id="@+id/txt_discount_price_item"                            style="@style/txt_price"                            android:layout_marginEnd="16dp"                            app:layout_constraintBottom_toBottomOf="@+id/txt_discount_price"                            app:layout_constraintEnd_toEndOf="parent"                            app:layout_constraintTop_toTopOf="@+id/txt_discount_price"                            tools:text="-10" />                        <com.google.android.material.textview.MaterialTextView                            android:id="@+id/txt_promo_price_item"                            style="@style/txt_price"                            android:layout_marginEnd="16dp"                            app:layout_constraintBottom_toBottomOf="@+id/txt_promo_price"                            app:layout_constraintEnd_toEndOf="parent"                            app:layout_constraintTop_toTopOf="@+id/txt_promo_price"                            tools:text="-100" />                        <View                            android:id="@+id/view_line"                            android:layout_width="match_parent"                            android:layout_height="2dp"                            android:layout_marginHorizontal="16dp"                            android:layout_marginTop="24dp"                            android:layout_marginBottom="24dp"                            android:background="@color/gray"                            app:layout_constraintBottom_toTopOf="@id/all_price"                            app:layout_constraintTop_toBottomOf="@id/txt_promo_price_item" />                        <com.google.android.material.textview.MaterialTextView                            android:id="@+id/all_price"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginBottom="16dp"                            android:text="@string/all"                            android:textColor="@color/blue"                            android:textSize="18sp"                            app:layout_constraintBottom_toBottomOf="parent"                            app:layout_constraintStart_toStartOf="@+id/txt_promo_price" />                        <com.google.android.material.textview.MaterialTextView                            android:id="@+id/all_price_item"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginEnd="16dp"                            android:textColor="@color/black"                            android:textSize="18sp"                            app:layout_constraintBottom_toBottomOf="@+id/all_price"                            app:layout_constraintEnd_toEndOf="parent"                            app:layout_constraintTop_toTopOf="@+id/all_price"                            tools:text="1790c" />                    </androidx.constraintlayout.widget.ConstraintLayout>                </androidx.cardview.widget.CardView>            </LinearLayout>        </androidx.constraintlayout.widget.ConstraintLayout>    </ScrollView>    <com.google.android.material.button.MaterialButton        android:id="@+id/button_continue"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginHorizontal="20dp"        android:layout_marginBottom="10dp"        android:backgroundTint="@color/button_next"        android:paddingVertical="14dp"        android:text="@string/text_continue"        android:textColor="@color/white"        android:textSize="16sp"        app:cornerRadius="16dp"        app:layout_constraintBottom_toBottomOf="parent"        tools:ignore="VisualLintButtonSize" /></androidx.constraintlayout.widget.ConstraintLayout>