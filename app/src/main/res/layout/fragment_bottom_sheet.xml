<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.screen.buy.BottomSheetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            style="@style/NoShadowButtonStyle"
            android:drawableStart="@drawable/ic_cancel"
            android:drawableTint="@color/black"
            android:backgroundTint="@android:color/transparent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:text="Заявка"
            android:layout_marginStart="90dp"
            android:textSize="19sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/phone_number"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_for_auth_views"
            android:singleLine="true"
            android:drawableStart="@drawable/ic_smart_phone"
            android:drawablePadding="12dp"
            android:maxLength="13"
            android:paddingStart="16dp"
            android:textColorHint="@color/grey"
            android:layout_marginTop="4dp"
            android:hint="+996 500 00 00 00" />

        <TextView
            android:text="ФИО"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_fio"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_for_auth_views"
            android:singleLine="true"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="12dp"
            android:paddingStart="16dp"
            android:textColorHint="@color/grey"
            android:layout_marginTop="4dp"
            android:hint="Асанов Усен" />

        <TextView
            android:text="Направление"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_tour"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_for_auth_views"
            android:singleLine="true"
            android:drawableStart="@drawable/ic_location"
            android:drawableTint="@color/black"
            android:drawablePadding="12dp"
            android:paddingStart="16dp"
            android:textColorHint="@color/grey"
            android:layout_marginTop="4dp"
            android:hint="Ала-Арча" />

        <TextView
            android:text="Дата"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_date"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:singleLine="true"
            android:background="@drawable/bg_for_auth_views"
            android:drawableStart="@drawable/ic_calendar_promo"
            android:drawablePadding="12dp"
            android:maxLength="10"
            android:paddingStart="16dp"
            android:textColorHint="@color/grey"
            android:layout_marginTop="4dp"
            android:hint="25.05.2024" />

        <TextView
            android:text="Количество человек"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_amount"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_for_auth_views"
            android:drawableStart="@drawable/ic_group"
            android:drawablePadding="12dp"
            android:inputType="number"
            android:paddingStart="16dp"
            android:textColorHint="@color/grey"
            android:layout_marginTop="4dp"
            android:hint="10" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_send"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:text="Отправить"
            android:textAllCaps="false"
            style="@style/NoShadowButtonStyle"
            app:cornerRadius="16dp"
            android:textSize="15sp"
            android:padding="10dp"
            android:backgroundTint="@color/light_grey"
            android:textColor="@color/gray"
            android:layout_marginBottom="12dp"
            android:layout_height="56dp"/>
    </LinearLayout>

</LinearLayout>