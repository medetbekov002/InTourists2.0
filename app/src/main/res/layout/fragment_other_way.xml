<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    xmlns:app="http://schemas.android.com/apk/res-auto"    tools:context=".ui.screen.payment.by_card.ByCardFragment"    android:background="#65E4E6E6">    <androidx.appcompat.widget.Toolbar        android:id="@+id/toolbar"        android:layout_width="match_parent"        android:layout_height="wrap_content"        app:layout_constraintTop_toTopOf="parent">        <androidx.appcompat.widget.AppCompatButton            android:id="@+id/button_back"            android:layout_width="26dp"            android:layout_height="26dp"            android:background="@drawable/ic_arrow_left"            app:cornerRadius="360dp"            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"            tools:layout_editor_absoluteX="16dp"            tools:layout_editor_absoluteY="19dp" />        <com.google.android.material.textview.MaterialTextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="@string/other_payment"            android:textSize="24sp"            android:textColor="@color/black"            android:textStyle="bold"            android:layout_marginStart="40dp"/>    </androidx.appcompat.widget.Toolbar>    <LinearLayout        android:id="@+id/icon_layout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:weightSum="3"        android:orientation="horizontal"        app:layout_constraintTop_toBottomOf="@id/toolbar"        android:layout_marginHorizontal="24dp">        <ImageView            android:id="@+id/img_confirm"            android:layout_width="wrap_content"            android:layout_height="60dp"            android:layout_weight="1"            android:contentDescription="@string/todo"            android:src="@drawable/bg_confirm" />        <ImageView            android:layout_weight="1"            android:id="@+id/img_card"            android:layout_width="60dp"            android:layout_height="60dp"            android:src="@drawable/ic_card_activate"            tools:ignore="ContentDescription" />        <ImageView            android:layout_weight="1"            android:id="@+id/img_payment"            android:layout_width="60dp"            android:layout_height="60dp"            android:src="@drawable/ic_payment_next"            tools:ignore="ContentDescription" />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_marginHorizontal="20dp"        android:layout_marginVertical="32dp"        android:orientation="vertical"        app:layout_constraintBottom_toTopOf="@+id/button_continue"        app:layout_constraintTop_toBottomOf="@+id/icon_layout"        tools:layout_editor_absoluteX="20dp">        <androidx.cardview.widget.CardView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:elevation="2dp"            app:cardCornerRadius="12dp">            <androidx.constraintlayout.widget.ConstraintLayout                android:layout_width="match_parent"                android:layout_height="match_parent">                <com.google.android.material.textview.MaterialTextView                    android:id="@+id/txt_main"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_margin="16dp"                    android:text="@string/payment_method"                    android:textColor="@color/black"                    android:textSize="18sp"                    android:textStyle="bold"                    app:layout_constraintTop_toTopOf="parent" />                <Spinner                    android:id="@+id/spinner"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginStart="16dp"                    android:entries="@array/OtherWayNames"                    app:layout_constraintStart_toStartOf="@id/txt_main"                    app:layout_constraintTop_toBottomOf="@id/txt_main" />            </androidx.constraintlayout.widget.ConstraintLayout>        </androidx.cardview.widget.CardView>        <androidx.cardview.widget.CardView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginVertical="16dp"            android:elevation="2dp"            app:cardCornerRadius="12dp">            <androidx.constraintlayout.widget.ConstraintLayout                android:layout_width="match_parent"                android:layout_height="match_parent">                <com.google.android.material.textfield.TextInputEditText                    android:id="@+id/et_promo"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_margin="16dp"                    android:background="@drawable/bg_card_corner"                    android:hint="@string/promocode"                    android:paddingVertical="18dp"                    android:paddingStart="10dp"                    android:textColor="@color/black"                    android:textColorHint="#404040"                    android:textSize="18sp"                    android:textStyle="bold"                    app:layout_constraintTop_toTopOf="parent"                    tools:ignore="RtlSymmetry,TextContrastCheck,VisualLintTextFieldSize"                    tools:layout_editor_absoluteX="16dp" />                <com.google.android.material.button.MaterialButton                    android:id="@+id/btn_cancel"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginEnd="8dp"                    android:backgroundTint="@color/parlament"                    android:insetTop="0dp"                    android:insetBottom="0dp"                    android:text="Применить"                    app:layout_constraintBottom_toBottomOf="@+id/et_promo"                    app:layout_constraintEnd_toEndOf="@+id/et_promo"                    app:layout_constraintTop_toTopOf="@+id/et_promo" />                <com.google.android.material.textview.MaterialTextView                    android:id="@+id/txt_all_price"                    style="@style/txt_price"                    android:layout_marginTop="24dp"                    android:text="@string/all_price"                    app:layout_constraintStart_toStartOf="@id/et_promo"                    app:layout_constraintTop_toBottomOf="@id/et_promo" />                <com.google.android.material.textview.MaterialTextView                    android:id="@+id/txt_discount_price"                    style="@style/txt_price"                    android:layout_marginTop="12dp"                    android:text="@string/discount_price"                    app:layout_constraintStart_toStartOf="@id/txt_all_price"                    app:layout_constraintTop_toBottomOf="@id/txt_all_price" />                <com.google.android.material.textview.MaterialTextView                    android:id="@+id/txt_promo_price"                    style="@style/txt_price"                    android:layout_marginTop="12dp"                    android:text="@string/promo_price"                    app:layout_constraintStart_toStartOf="@+id/txt_discount_price"                    app:layout_constraintTop_toBottomOf="@+id/txt_discount_price" />                <com.google.android.material.textview.MaterialTextView                    android:id="@+id/txt_all_price_item"                    style="@style/txt_price"                    android:layout_marginEnd="16dp"                    app:layout_constraintBottom_toBottomOf="@+id/txt_all_price"                    app:layout_constraintEnd_toEndOf="parent"                    app:layout_constraintTop_toTopOf="@+id/txt_all_price"                    tools:text="1900c" />                <com.google.android.material.textview.MaterialTextView                    android:id="@+id/txt_discount_price_item"                    style="@style/txt_price"                    android:layout_marginEnd="16dp"                    app:layout_constraintBottom_toBottomOf="@+id/txt_discount_price"                    app:layout_constraintEnd_toEndOf="parent"                    app:layout_constraintTop_toTopOf="@+id/txt_discount_price"                    tools:text="-10" />                <com.google.android.material.textview.MaterialTextView                    android:id="@+id/txt_promo_price_item"                    style="@style/txt_price"                    android:layout_marginEnd="16dp"                    app:layout_constraintBottom_toBottomOf="@+id/txt_promo_price"                    app:layout_constraintEnd_toEndOf="parent"                    app:layout_constraintTop_toTopOf="@+id/txt_promo_price"                    tools:text="-100" />                <View                    android:id="@+id/view_line"                    android:layout_width="match_parent"                    android:layout_height="2dp"                    android:layout_marginHorizontal="16dp"                    android:layout_marginTop="24dp"                    android:layout_marginBottom="24dp"                    android:background="@color/gray"                    app:layout_constraintBottom_toTopOf="@id/all_price"                    app:layout_constraintTop_toBottomOf="@id/txt_promo_price_item" />                <com.google.android.material.textview.MaterialTextView                    android:id="@+id/all_price"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginBottom="16dp"                    android:text="@string/all"                    android:textColor="@color/blue"                    android:textSize="18sp"                    app:layout_constraintBottom_toBottomOf="parent"                    app:layout_constraintStart_toStartOf="@+id/txt_promo_price" />                <com.google.android.material.textview.MaterialTextView                    android:id="@+id/all_price_item"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginEnd="16dp"                    android:textColor="@color/black"                    android:textSize="18sp"                    app:layout_constraintBottom_toBottomOf="@+id/all_price"                    app:layout_constraintEnd_toEndOf="parent"                    app:layout_constraintTop_toTopOf="@+id/all_price"                    tools:text="1790c" />            </androidx.constraintlayout.widget.ConstraintLayout>        </androidx.cardview.widget.CardView>    </LinearLayout>    <com.google.android.material.button.MaterialButton        android:id="@+id/button_continue"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginHorizontal="20dp"        app:cornerRadius="16dp"        android:paddingVertical="14dp"        android:textColor="@color/white"        android:textSize="16sp"        app:layout_constraintBottom_toBottomOf="parent"        android:layout_marginBottom="10dp"        android:text="Отправить чек менеджеру"        android:backgroundTint="@color/button_next"        tools:ignore="VisualLintButtonSize" /></androidx.constraintlayout.widget.ConstraintLayout>