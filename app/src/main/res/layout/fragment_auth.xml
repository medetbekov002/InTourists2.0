<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="40dp"
    tools:context=".presentation.ui.screen.auth.AuthFragment">

    <TextView
        android:id="@+id/tv_auth"
        android:layout_width="320dp"
        android:layout_height="38dp"
        android:layout_marginTop="132dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal|top"
        android:text="@string/authorization"
        android:textColor="@color/black"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/tv_auth_desc"
        android:layout_width="320dp"
        android:layout_height="38dp"
        android:layout_marginBottom="32dp"
        android:gravity="center_horizontal|top"
        android:text="@string/auth_desc"
        android:textColor="#757575"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="4dp"
        android:text="Номер телефона" />

    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_for_auth_views"
        android:drawableStart="@drawable/ic_smart_phone"
        android:drawablePadding="12dp"
        android:maxLength="13"
        android:paddingStart="16dp"
        android:text="+996" />

    <TextView
        android:id="@+id/tv_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textSize="12sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_continue"
        style="@style/NoShadowButtonStyle"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:backgroundTint="#F5F5F5"
        android:text="@string/text_continue"
        android:textAllCaps="false"
        android:textColor="#B0B0B0"
        app:cornerRadius="16dp" />

    <Button
        android:id="@+id/btn_google"
        style="@style/NoShadowButtonStyle"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#F5F5F5"
        android:drawableLeft="@drawable/ic_google"
        android:paddingStart="48dp"
        android:text="Войти с помощью Google"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:cornerRadius="16dp" />

    <Button
        android:id="@+id/btn_skip"
        style="@style/NoShadowButtonStyle"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="@color/white"
        android:text="@string/rext_skip"
        android:textAllCaps="false"
        android:textColor="@color/black" />
</LinearLayout>