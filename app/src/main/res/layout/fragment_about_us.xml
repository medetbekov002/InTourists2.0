<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:paddingTop="28dp"    android:layout_gravity="center"    android:background="@color/white"    tools:context=".ui.screen.about_us.AboutUsFragment">    <Toolbar        android:id="@+id/title_about_us"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:navigationIcon="@drawable/ic_arrow_left"        android:title="@string/About_us"        android:titleTextColor="@color/black" />    <View        android:layout_width="match_parent"        android:layout_height="40dp" />    <TextView        android:id="@+id/tv_about_us_description"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_gravity="center"        android:text="@string/About_us_description"        android:textColor="@color/black"        android:paddingHorizontal="20dp"        android:fontFamily="sans-serif-light"        android:textSize="15sp"        tools:ignore="TextSizeCheck" /></LinearLayout>